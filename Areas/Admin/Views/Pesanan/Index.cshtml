@model PesananDashboard

@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">

    <!-- Page Heading -->
    

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h1 class="h3 mb-2 text-gray-800">Table Pesanan</h1>
            @*<a asp-action="Create"><input type="submit" class="btn btn-outline-success" value="Add Data"></a>*@
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nama Pemesan</th>
                            <th>Nama Barang</th>
                            <th>Gambar</th>
                            <th>Harga</th>
                            <th>Tanggal Pesan</th>
                            <th>Jumlah Pesanan</th>
                            <th>Total Pesanan</th>
                            <th>Opsi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.pemesanan)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Barang.NamaBarang)</td>
                                <td><img src="@item.Barang.Image" alt="Image" width="100" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Barang.Harga)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tanggal_Pesan)</td>
                                <td>@Html.DisplayFor(modelItem => item.Jumlah_Pesan)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total_pesan)</td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id_Pesanan"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
